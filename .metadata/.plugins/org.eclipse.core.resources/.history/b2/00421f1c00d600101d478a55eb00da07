package in.sunny;

public class ReverseString {
	public static void main(String[] args) {
		String s1 ="Hello";
		String s = reverse(s1);
		System.out.println(s);
	}
	public static String reverse(String s) {
	
		char[] arr = s.toCharArray();
	    int i = 0, j = arr.length - 1;

	    while (i < j) {
	        char temp = arr[i];
	        arr[i] = arr[j];
	        arr[j] = temp;
	        i++;
	        j--;
	    }
		return new String(arr);
	}
	
	

}
