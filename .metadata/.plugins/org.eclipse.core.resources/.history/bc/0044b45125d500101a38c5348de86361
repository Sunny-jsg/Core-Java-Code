package in.ramana;

public class Q25 {

	public static void main(String[] args) {

		int[] a = { 2, 3, 4, 1 };
		int[] b = { 2, 3, 5, 6, 7, 8, 9 };

		int maxLen = Math.max(a.length, b.length);
		int minLen = Math.min(a.length, b.length);

		int[] res = new int[maxLen];

		// Add common part
		for (int i = 0; i < minLen; i++) {
			res[i] = a[i] + b[i];
		}

		// Copy remaining elements from larger array
		if (a.length > b.length) {
			for (int i = minLen; i < maxLen; i++) {
				res[i] = a[i];
			}
		} else {
			for (int i = minLen; i < maxLen; i++) {
				res[i] = b[i];
			}
		}

		// Print output
		System.out.print("{ ");
		for (int x : res) {
			System.out.print(x + " ");
		}
		System.out.println("}");
	}

}
