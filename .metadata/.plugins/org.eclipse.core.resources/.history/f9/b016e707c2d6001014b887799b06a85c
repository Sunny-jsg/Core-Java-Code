package in.sunny;

import java.util.Arrays;

public class MergeTwoArray {
	public static void main(String[] args) {
		int[] arr1 = { 1, 2, 4, 7, 8 };
		int[] arr2 = { 3, 6, 9, 10, 12 };
		int[] arr3 = new int[arr1.length + arr2.length];
		
		
		int index = 0;
		for (int a : arr1) {
			arr3[index] = a;
			index++;
		}
		for (int b : arr2) {
			arr3[index] = b;
			index++;
		}
		int countEven =0;
		for (int c : arr3) {
			if (c % 2 == 0) {
				countEven++;
			}
		}
		int [] evenArray = new int[countEven];
		int evenIndex =0;
		for(int d : arr3) {
			if(d%2 ==0) {
			evenArray[evenIndex] =d;
			evenIndex++;
			}
		}
		System.out.println(Arrays.toString(evenArray));
	}

}
